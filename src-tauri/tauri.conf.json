{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoipGlot",
  "version": "0.1.0",
  "identifier": "com.voipglot.win",
  "build": {
    "frontendDist": "../dist",
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VoipGlot - Real-time Audio Translation",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../icons/icon.ico"
    ],
    "resources": [
      "*.dll",
      "resources/models/**/*"
    ]
  }
} 